fn add(string: &str) -> i32 {
	if string == "" {
		return 0;
	} else {
		return string.trim().parse().
			.ok()
			.expect("WTF!!!");
	}
}



#[test]
fn when_given_empty_string_it_should_return_zero() {
	assert_eq!(0, add(""));
}
#[test]
fn when_given_number_it_should_return_its_value() {
	assert_eq!(23, add("23"));
}
